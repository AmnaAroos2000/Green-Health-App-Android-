<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cholestrol">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/constrain">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a52a2a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:logo="@drawable/minicon"
            app:title="Cholestrol Patients' Food"
            app:titleMarginStart="40dp"
            app:titleTextColor="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="370dp"
            android:layout_height="108dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:autoSizeTextType="uniform"
            android:background="#f0e68c"
            android:text="By clicking this button you can get tips on
  how you can
 take foods to maintain your body healthy.
                                           Click the below BUTTON for more details"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.067" />

        <Button
            android:id="@+id/tips1"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:backgroundTint="#8601af"
            android:text="TIPS FOR YOU"
            android:textSize="20sp"
            android:layout_marginTop="-5dp"
            android:layout_marginStart="18dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="125dp"
            android:id="@+id/cd_15"
            app:cardCornerRadius="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0247fe"
                android:padding="10dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:text="Legumes"
                    android:layout_marginStart="145dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="230dp"
                    android:src="@drawable/legumes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click for More Details"
                    android:layout_marginTop="75dp"
                    android:layout_marginStart="200dp"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="125dp"
            android:id="@+id/cd_16"
            app:cardCornerRadius="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00b7eb"
                android:padding="10dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:text="Rice and Curry with Fatty Fish"
                    android:layout_marginStart="140dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="230dp"
                    android:src="@drawable/fattyfish" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click for More Details"
                    android:layout_marginTop="75dp"
                    android:layout_marginStart="200dp"
                    android:id="@+id/btn11"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="125dp"
            android:id="@+id/cd_17"
            app:cardCornerRadius="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ced1"
                android:padding="10dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:text="Sweet Potato Bean Burger"
                    android:layout_marginStart="140dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="230dp"
                    android:src="@drawable/sweetburger" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click for More Details"
                    android:layout_marginTop="75dp"
                    android:layout_marginStart="200dp"
                    android:id="@+id/btn15"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="125dp"
            android:id="@+id/cd_18"
            app:cardCornerRadius="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffff"
                android:padding="10dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:text="Crispy Herbs and Escarole"
                    android:layout_marginStart="140dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="230dp"
                    android:src="@drawable/crispy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click for More Details"
                    android:layout_marginTop="75dp"
                    android:layout_marginStart="200dp"
                    android:id="@+id/btn16"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/backtomain"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>


</ScrollView>

