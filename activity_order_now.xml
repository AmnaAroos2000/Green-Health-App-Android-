<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".OrderNow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#a52a2a"
            app:title="FORM"
            app:titleMarginStart="170dp"
            app:titleTextColor="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Fill the form to order foods"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name with Initials : "
            android:textColor="#a52a2a"
            android:textSize="18sp"
            android:padding="10sp"/>

        <EditText
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:layout_marginStart="13dp"
            android:textSize="15sp"
            android:hint="Enter your Name"
            android:id="@+id/name"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="#ffff00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recident Address : "
            android:textColor="#a52a2a"
            android:textSize="18sp"
            android:padding="10sp"/>

        <EditText
            android:layout_width="385dp"
            android:layout_height="80dp"
            android:layout_marginStart="13dp"
            android:textSize="15sp"
            android:hint="Enter your address"
            android:id="@+id/address"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="#ffff00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Selected Food : "
            android:textColor="#a52a2a"
            android:textSize="18sp"
            android:padding="10sp"/>

        <EditText
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:hint="Enter the selected food"
            android:id="@+id/food"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="#ffff00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Count of the Selected Food : "
            android:textColor="#a52a2a"
            android:textSize="18sp"
            android:padding="10sp"/>

        <EditText
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:hint="Enter the food count"
            android:id="@+id/count"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="#ffff00"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="#a52a2a"
            android:id="@+id/submit"
            android:layout_marginTop="20dp"
            android:layout_marginStart="32dp"
            android:text="SUBMIT"
            android:textSize="20sp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="#a52a2a"
            android:id="@+id/view"
            android:layout_marginTop="0dp"
            android:layout_marginStart="32dp"
            android:text="VIEW"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do You Want to Update or Delete Your Order ? "
            android:textColor="#dc143c"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:padding="10sp"/>

        <EditText
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:hint="Enter Your ID"
            android:id="@+id/deleteORupdate"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background=" #ffa366"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="#a52a2a"
            android:id="@+id/delete"
            android:layout_marginTop="20dp"
            android:layout_marginStart="32dp"
            android:text="DELETE"
            android:textSize="20sp"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="#a52a2a"
            android:id="@+id/update"
            android:layout_marginTop="0dp"
            android:layout_marginStart="32dp"
            android:text="UPDATE"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:contentDescription="back button"
            app:srcCompat="@drawable/back"
            android:scaleType="fitCenter"/>




    </LinearLayout>


</ScrollView>